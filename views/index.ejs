<!-- Adicionar o Head -->
<%- include('./partials/head') %> 

  <body>
    <%- include('./partials/navbar') %> 
    
    <div class="container">  

      <% Avisos.forEach(Aviso => { %>

        <div class="card shadow mt-4">
          <div class="card-header bg-green text-white pl-5 pt-3 d-flex align-items-center justify-content-between">
            <h2><i class="fas fa-exclamation pr-2"></i> <%= Aviso.titulo %></h2>
            <h2 class="lead"><%= moment(Aviso.data).format("DD/MM/YYYY") %></h2>
          </div>
          <div class="card-body p-5">
            <!--Info perfil-->
            <div class="d-flex align-items-center">
              <img src="css/img/adm.jpg" class="img-thumbnail rounded-circle" width="70">
              
              <div class="ml-2" >
              <div class="font-weight-bold">Paulo Grazia</div>
              <div class="text-secondary"> <%= moment(Aviso.data, "YYYYMMDD").fromNow(); %>  </div>
              </div>
    
            </div>
    
            <!-- Descrição do Aviso -->
            <div class="mt-4" ><%= Aviso.mensagem %></div>
    
          </div> <!-- Card-Body-->
        </div> <!-- Card -->

      <% }) %> 

    

    <br>

    </div><!-- Container -->

  <!-- Adicionar os Scipts do BootStrap-->
  <%- include('./partials/scripts_import') %> 
  </body>

</html>
